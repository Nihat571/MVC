
@model List<Flower>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="d-flex justify-content-center py-5">
    <h1>Flowers</h1>
</div>
<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row w-100">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                    <img src="~/assets/img/@item.ImgUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h5 class="card-title">@item.Price $</h5>
                        <div class=" flex-column gap-3 justify-content-center align-items-center ">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-block">Delete</a>
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-block">Update</a>
     
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>





<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
