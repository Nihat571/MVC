@using Forella.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model Flower
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="m-5 min-vh-100 flex-column justify-content-center align-content-center">
    <div class="m-5">
        <form asp-area="Admin" asp-controller="Dashboard" asp-action="Create" method="post">
            <legend>Flower əlavə etmək
                </legend>
            <div class="mt-3">
                <label for="exampleInputEmail1" class="form-label">Flower Name</label>
                <input asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Flower Price</label>
                <input  asp-for="Price" class="form-control" id="exampleInputPassword1">
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Flower Img Url</label>
                <input  asp-for="ImgUrl" class="form-control" id="exampleInputPassword1">
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>