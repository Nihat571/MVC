@using ProjectMVC.ViewModels


 @model CourseVM

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<main class="h-100 w-100 d-flex justify-content-center align-items-center">

    <div class="bg-success p-5 rounded-3 ">
        <div class="col-12 text-center py-4">
            <h2 class="mb-5 text-white">Add New Course</h2>
        </div>

        <form enctype="multipart/form-data" asp-for="Admin" asp-controller="Dashboard" asp-action="Create" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Villa Name</label>
                <input asp-for="Name" placeholder="enter Course name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <span asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Author</label>
                <input asp-for="Author" placeholder="enter Author" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Author"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Subject</label>
                <input asp-for="Subject" placeholder="enter Subject" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Subject"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Price</label>
                <input asp-for="Price" placeholder="enter Price" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Price"></span>
            </div>

          
            <div class="mb-3">
                <label for="formFile" class="form-label">Default file input example</label>
                <input asp-for="File" class="form-control" id="formFile">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</main>