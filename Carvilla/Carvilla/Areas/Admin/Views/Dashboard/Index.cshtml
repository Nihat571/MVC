
@model List<Car>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex justify-content-center py-5">
    <h1>Cars</h1>
</div>

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row w-100">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="border rounded-4 shadow-sm p-3 h-100">
                    <div class="mb-3">
                        <img src="~/assets/uploadedImages/@item.ImgUrl"
                             alt="cars"
                             class="img-fluid rounded w-100"
                             style="height: 200px">
                    </div>
                    <h5 class="fw-bold mb-2">
                        <a href="#" class="text-decoration-none text-dark">@item.Name</a>
                    </h5>
                    <div class="mb-2 text-muted small">
                        <div><strong>Model ili:</strong> @item.Year</div>
                        <div><strong>Model adı:</strong> @item.Model</div>
                        <div><strong>HP:</strong> @item.HP HP</div>
                        <div><strong>Tip:</strong> @item.Type</div>
                    </div>

                    <h6 class="text-success mb-2">$@item.Price</h6>
                    <p class="text-muted small mb-0">@item.Desc</p>

                    <div>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-block">Delete</a>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-block">Update</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/_framework/aspnetcore-browser-refresh.js"></script>
