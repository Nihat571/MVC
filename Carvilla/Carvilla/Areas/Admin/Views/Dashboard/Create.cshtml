
@model CarCreateVM
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="bg-primary min-vh-100 py-5">
    <form enctype="multipart/form-data" asp-for="Admin" asp-controller="Dashboard" asp-action="Create" method="post" class="bg-white p-4 rounded shadow mx-auto" style="max-width: 900px;">
        <h4 class="mb-4 text-center">Car Create Form</h4>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="carName">Car Name</label>
                <input asp-for="Name" class="form-control" id="carName" placeholder="Enter car name">
            </div>
            <div class="form-group col-md-6">
                <label for="carModel">Car Model</label>
                <input asp-for="Model" class="form-control" id="carModel" placeholder="Enter model">
            </div>
            <div class="form-group col-md-6">
                <label for="carYear">Car Year</label>
                <input asp-for="Year" class="form-control" id="carYear" placeholder="Enter car year">
            </div>
            <div class="form-group col-md-6">
                <label for="carType">Car Type</label>
                <input asp-for="Type" class="form-control" id="carType" placeholder="Enter car type">
            </div>
            <div class="form-group col-md-6">
                <label for="carHP">Car HP</label>
                <input asp-for="HP" class="form-control" id="carHP" placeholder="Enter HP">
            </div>
            <div class="form-group col-md-6">
                <label for="carPrice">Car Price</label>
                <input asp-for="Price" class="form-control" id="carPrice" placeholder="Enter car price">
            </div>
             <div class="form-group col-md-6"> 
                 <label for="carImage">Car Image</label> 
                 <div class="custom-file"> 
                     <input asp-for="ImgFile" class="custom-file-input" id="carImage"> 
                     <label class="custom-file-label" for="carImage">Choose image</label> 
                 </div> 
             </div> 
            <div class="form-group col-12">
                <label for="carDesc">Car Description</label>
                <textarea asp-for="Desc" class="form-control" id="carDesc" rows="3" placeholder="Enter description"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3 btn-block">Submit</button>
    </form>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</div>
