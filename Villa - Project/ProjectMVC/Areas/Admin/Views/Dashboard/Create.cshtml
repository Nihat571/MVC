@using ProjectMVC.ViewModels

 @model CreateVillaVM

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<main class="h-100 w-100 d-flex justify-content-center align-items-center">

    <div class="bg-info p-5 rounded-3 ">
        <div class="col-12 text-center py-4">
            <h2 class="mb-5 text-white">Add New Products</h2>
        </div>

        <form enctype="multipart/form-data" asp-for="Admin" asp-controller="Dashboard" asp-action="Create" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Villa Name</label>
                <input asp-for="Name" placeholder="enter Villa name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Villa type</label>
                <input asp-for="Type" placeholder="enter type" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Type"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Villa Area</label>
                <input asp-for="Area" placeholder="enter Area" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Area"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Villa Floor</label>
                <input asp-for="Floor" placeholder="enter floor" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Floor"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Villa Price</label>
                <input asp-for="Price" placeholder="enter price" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Price"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Villa Parking</label>
                <input asp-for="Parking" placeholder="enter Parking" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Parking"></span>
            </div>

            <div class="d-flex justify-content-between">

                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Villa bedroom</label>
                    <input asp-for="Bedrooms" placeholder="enter bedroom" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="Bedrooms" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Villa Bathrooms</label>
                    <input asp-for="Bathrooms" class="form-control" placeholder="enter bathroom" id="exampleInputPassword1">
                    <span asp-validation-for="Bathrooms" class="text-danger"></span>
                </div>


            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Default file input example</label>
                <input asp-for="File" class="form-control" id="formFile">
                <span asp-validation-for="Bathrooms" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</main>
