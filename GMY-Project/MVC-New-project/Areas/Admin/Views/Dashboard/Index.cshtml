﻿
@model List<GymProgram>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<main class="container">
    <div class="col-12 text-center py-4">
        <h2 class="mb-5"> GYM PROGRAMS</h2>
    </div>
    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Create" class="btn btn-primary my-5">CREATE</a>

    <div class="row gap-4">

        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <img src="~/assets/uploadedImages/@item.ImgUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">UPDATE</a>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">DELETE</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</main>